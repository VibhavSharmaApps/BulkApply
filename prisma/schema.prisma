datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  resumes   Resume[] // ðŸ‘ˆ This is the relation array
  createdAt DateTime @default(now())
}

model Resume {
  id         String   @id @default(uuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id]) // ðŸ‘ˆ Moved below userId
  jobTitle   String
  location   String
  experience Int
  resumeUrl  String
  uploadedAt DateTime @default(now())
}
